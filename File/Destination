 #include <stdio.h>
 #include <stdlib.h>
 
 
 int main(void)
 {
 	FILE *fptr;
 	int ch;
 	if((fptr = fopen("myfile","r"))==NULL)
 	{
 		printf("Error in opening file\n");
 		exit(1);
	 }
//	 printf("Enter text :\n");
	 while((ch = fgetc(fptr))!=EOF)
	 printf("%c",ch);
//	 	fputc(ch,fptr);
		
	fclose(fptr);
	return 0;
 }